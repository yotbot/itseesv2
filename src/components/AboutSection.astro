---
// AboutSection.astro - Full-service web development intro with service cards
const services = [
  {
    title: 'Custom Development',
    description: 'Tailored solutions built from the ground up to match your unique business needs.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>`,
  },
  {
    title: 'Modern Tech Stack',
    description: 'Built with cutting-edge technologies for performance, scalability, and maintainability.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path></svg>`,
  },
  {
    title: 'Managed Hosting',
    description: 'Reliable, fast, and secure hosting infrastructure so you never worry about downtime.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path></svg>`,
  },
  {
    title: 'Ongoing Partnership',
    description: 'Long-term support and evolution of your digital presence as your business grows.',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>`,
  },
];
---

<section id="about" class="relative min-h-screen py-32 transition-colors duration-700">
  <div class="section-container relative z-20">
    <!-- Main headline -->
    <div class="mb-20">
      <h2 class="text-5xl md:text-7xl font-bold text-itsees-dark mb-6 about-title">
        Full-service<br />web development
      </h2>
      <p class="text-xl md:text-2xl text-itsees-dark/70 max-w-2xl about-subtitle">
        From concept to launch and beyond. We handle everything so you can focus on what matters mostâ€”your business.
      </p>
    </div>

    <!-- Service cards grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
      {services.map((service, index) => (
        <div
          class="service-card group"
          data-service-index={index}
        >
          <div class="flex items-start gap-4">
            <div class="text-itsees-blue group-hover:text-itsees-blue-light transition-colors" set:html={service.icon} />
            <div>
              <h3 class="text-xl font-semibold text-itsees-dark mb-2">
                {service.title}
              </h3>
              <p class="text-itsees-dark/60">
                {service.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // Animate title
    gsap.from('.about-title', {
      opacity: 0,
      y: 50,
      scrollTrigger: {
        trigger: '#about',
        start: 'top 80%',
        end: 'top 50%',
        scrub: 1,
      },
    });

    // Animate subtitle
    gsap.from('.about-subtitle', {
      opacity: 0,
      y: 30,
      scrollTrigger: {
        trigger: '#about',
        start: 'top 70%',
        end: 'top 40%',
        scrub: 1,
      },
    });

    // Animate service cards
    gsap.utils.toArray('.service-card').forEach((card, index) => {
      gsap.from(card as Element, {
        opacity: 0,
        y: 40,
        scrollTrigger: {
          trigger: card as Element,
          start: 'top 85%',
          end: 'top 65%',
          scrub: 1,
        },
      });
    });
  });
</script>

<style>
  .service-card {
    @apply bg-white/80 backdrop-blur-sm rounded-2xl p-6 shadow-sm;
  }
</style>
