---
// HeroSection.astro - Large centered "itsees" logo with dots as eyes
---

<section id="hero" class="relative min-h-[120svh] bg-itsees-bg">
  <!-- Fixed logo container - stays centered while scrolling -->
  <div class="hero-content fixed inset-0 flex items-center justify-center z-20 pointer-events-none">
    <!-- itsees SVG logo with spaces for the dots to act as eyes -->
    <svg
      id="logo-svg"
      viewBox="0 0 400 100"
      class="w-[80vw] max-w-4xl h-auto"
      aria-label="itsees"
    >
      <defs>
        <style>
          .logo-text {
            font-family: 'Geist', system-ui, sans-serif;
            font-weight: 700;
            font-size: 72px;
            fill: #171717;
          }
        </style>
      </defs>
      <!-- The text "itsees" - the e's have holes for the dots -->
      <text x="50%" y="70" text-anchor="middle" class="logo-text">
        its<tspan class="e-letter">e</tspan><tspan class="e-letter">e</tspan>s
      </text>
    </svg>
  </div>

  <!-- Scroll indicator -->
  <div class="scroll-indicator fixed bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-itsees-dark/50 z-20">
    <span class="text-sm tracking-wider uppercase">Scroll</span>
    <div class="w-px h-12 bg-gradient-to-b from-itsees-dark/50 to-transparent animate-pulse"></div>
  </div>
</section>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // Fade in tagline
    gsap.to('.hero-tagline', {
      opacity: 1,
      y: 0,
      duration: 1,
      delay: 0.5,
      ease: 'power2.out',
    });

    // Fade out scroll indicator quickly
    gsap.to('.scroll-indicator', {
      opacity: 0,
      scrollTrigger: {
        trigger: '#hero',
        start: '10% top',
        end: '20% top',
        scrub: 1,
      },
    });
  });
</script>

<style>
  .hero-tagline {
    transform: translateY(10px);
  }

  .e-letter {
    letter-spacing: 0.05em;
  }
</style>
